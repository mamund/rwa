<?xml version="1.0" ?>
<?xml-stylesheet href="documentation.xsl" ?>
<alps>
    <link rel="self" href="http://alps.io/profiles/hmaze" />
    <link rel="help" href="http://amundsen.com/media-types/maze/" />

    <doc format="html">
        <h2>hMaze</h2>
        <p>Describes a common profile for implementing the hMaze microformat.</p>
    </doc>
  
    <descriptor id="hmaze" 
        type="semantic"
        cardinality="single"
        appears="SHOULD">
        <doc>Indicates the parent tag of an hMaze document.</doc>
    
        <descriptor id="collection"
            type="semantic"
            rt="maze"
            cardinality="single"
            appears="MAY">
            <link re="help" href="http://tools.ietf.org/html/rfc6573#section-2.2" />
            <doc>Describes a collection of mazes.</doc>    
            
            <descriptor id="maze_link" name="maze"
              type="safe"
              rt="cell"
              cardinality="many"
              appears="SHOULD">
              <link rel="help" href="http://amundsen.com/media-types/maze/format/#maze-rel" />
              <doc>Links to a particular maze.</doc>
            </descriptor>
              
        </descriptor>
        
        <descriptor id="maze"
          type="semantic"
          cardinality="single"
          appears="MAY">
          <link rel="help" href="http://amundsen.com/media-types/maze/format/#item-element" />
          <doc>Describes an individual maze.</doc>
        </descriptor>
        
        <descriptor id="error"
          type="semantic"
          cardinality="single"
          appears="MAY">
          <link rel="help" href="http://amundsen.com/media-types/maze/format/#error-element" />
          <doc>Describes an error message.</doc>
        </descriptor>
        
        <descriptor id="cell"
          type="semantic"
          cardinality="single"
          appears="MAY">
          <link rel="help" href="http://amundsen.com/media-types/maze/format/#cell-element" />
          <doc>Describes a cell in a maze.</doc>
          
          <descriptor id="title"
            type="semantic"
            cardinality="single"
            appears="MAY">
            <doc>Contains the name of the cell. NOTE: This is still missing from the Maze+XML spec! (MCA)</doc>
            
            <descriptor id="north"
              type="safe"
              rt="cell"
              cardinality="single"
              appears="MAY">
              <link rel="help" href="http://microformats.org/wiki/rel-north" />
              <doc>Refers to a resource that is "north" of the current resource.</doc>
            </descriptor>

            <descriptor id="south"
              type="safe"
              rt="cell"
              cardinality="single"
              appears="MAY">
              <link rel="help" href="http://microformats.org/wiki/rel-south" />
              <doc>Refers to a resource that is "south" of the current resource.</doc>
            </descriptor>

            <descriptor id="east"
              type="safe"
              rt="cell"
              cardinality="single"
              appears="MAY">
              <link rel="help" href="http://microformats.org/wiki/rel-east" />
              <doc>Refers to a resource that is "east" of the current resource.</doc>
            </descriptor>

            <descriptor id="west"
              type="safe"
              rt="cell"
              cardinality="single"
              appears="MAY">
              <link rel="help" href="http://microformats.org/wiki/rel-west" />
              <doc>Refers to a resource that is "west" of the current resource.</doc>
            </descriptor>

            <descriptor id="exit"
              type="safe"
              rt="resource"
              cardinality="single"
              appears="MAY">
              <link rel="help" href="http://microformats.org/wiki/rel-exit" />
              <doc>
                Refers to a resource that represents the exit 
                or end of the current client actvity or process.
              </doc>
            </descriptor>

            <descriptor id="current"
              type="safe"
              rt="cell"
              cardinality="single"
              appears="MAY">
              <link rel="help" href="http://www.iana.org/assignments/link-relations/link-relations.xml#current" />
              <doc>Refers to a resource containing the most recent item(s) in a collection of resources.</doc>
            </descriptor>

            <descriptor id="start"
              type="safe"
              rt="cell"
              cardinality="single"
              appears="MAY">
              <link rel="help" href="http://microformats.org/wiki/rel-start" />
              <doc>Refers to the first resource in a collection of resources.</doc>
            </descriptor>
              
          </descriptor>
          
      </descriptor>
        
    </descriptor>
    
</alps>
