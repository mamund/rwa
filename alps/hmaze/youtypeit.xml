<?xml version="1.0" ?>
<?xml-stylesheet href="documentation.xsl" ?>
<alps>

    <!--
        focus on transitions and response elements

        five transitions (no indication data elements for them)
        six semantic desriptors (two of them are containers)

        i guess is can be assumed that the transitions will not
        require data elements that do not appear in this profile?
    -->

    <link rel="self" href="http://alps.io/profiles/youtypeit" />

    <doc format="html">
        <h2>Yout Type It, We Post It Profile</h2>
        <p>Describes a common profile for implementing the ytiwpi service.</p>
    </doc>

    <!-- transitions:
         - collection, item == safe transitions
         - post == unsafe transition
         - remove, update == idempotent transitions
    -->
    <descriptor id="collection" type="safe" appears="SHOULD">
        <link rel="help" href="http://alps.io/iana#collection" />
        <doc>Link that returns a list of messages.</doc>
    </descriptor>

    <descriptor id="item" type="safe" appears="SHOULD">
        <link rel="help" href="http://alps.io/iana/#item" />
        <doc>Link that returns a single message.</doc>
    </descriptor>

    <descriptor id="post" type="unsafe" appears="SHOULD">
        <doc>Use this transition to add a new message to the collection.</doc>
    </descriptor>

    <descriptor id="remove" type="idempotent" appears="MAY">
        <doc>Use this transition to remove a message from the collection,</doc>
    </descriptor>

    <descriptor id="update" type="idempotent" appears="MAY">
        <doc>Use this transition to update an existing message.</doc>
    </descriptor>

    <!-- semantic elements:
         - messageList, message == containers
         - text, author, id, date == data elements
    -->
    <descriptor id="messageList" type="semantic" appears="SHOULD">
        <doc>Represents a list of messages.</doc>
        <contains href="messageItem" type="semantic" appears="MAY" />
    </descriptor>

    <descriptor id="messageItem" type="semantic" appears="MAY">
        <doc>Represents a single message.</doc>
        <contains href="#text" type="semantic" appears="SHOULD" />
        <contains href="#author" type="semantic" appears="SHOULD" />
        <contains href="#id" type="semantic" appears="MAY" />
        <contains href="#messageDate" type="semantic" appears="MAY" />
    </descriptor>

    <descriptor id="text" type="semantic" appears="SHOULD">
        <doc>Contains the text of the message.</doc>
    </descriptor>

    <descriptor id="author" type="semantic" appears="SHOULD">
        <link rel="help" href="http://microformats.org/wiki/hcard#fn" />
        <doc>
            Contains a text string representing the author of the
            message.
        </doc>
    </descriptor>

    <descriptor id="id" type="semantic" appears="MAY">
        <doc>Contains the unique identifier of the message.</doc>
    </descriptor>

    <descriptor id="messageDate" type="semantic" appears="MAY">
        <link rel="help" href="http://schema.org/Date" />
        <doc>
            Contains an ISO 8601 date representing the date of the
            message.
        </doc>
    </descriptor>

</alps>
